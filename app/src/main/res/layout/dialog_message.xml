<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_margin"
    android:layout_marginRight="@dimen/dialog_margin"
    android:background="@drawable/shape_rectangle_circle_solid_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ic_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding">

        <ImageView
            android:id="@+id/iv_title_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/default_padding"
           />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_3f3f3f"
            android:textSize="@dimen/public_size_middle_text" />
    </LinearLayout>

    <View
        android:id="@+id/v_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_orange_fe7418" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_space_of_left"
        android:paddingTop="@dimen/dialog_text_margin"
        android:paddingRight="@dimen/default_space_of_right"
        android:paddingBottom="@dimen/dialog_text_margin">
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black_3f3f3f"
            android:visibility="visible"
            android:textSize="@dimen/public_size_middle_text" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_m"
        android:background="@color/dividing_line_black_d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="5"
            android:background="@android:color/transparent"
            android:text="@string/public_text_cancel"
            android:textColor="@color/main_orange_fe7418"
            android:textSize="@dimen/public_size_middle_text" />

        <View
            android:id="@+id/v_button_line"
            android:layout_width="@dimen/line_size_m"
            android:layout_height="match_parent"
            android:background="@color/dividing_line_black_d9d9d9" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="5"
            android:text="@string/public_text_ok"
            android:textColor="@color/main_orange_fe7418"
            android:textSize="@dimen/public_size_middle_text" />
    </LinearLayout>
</LinearLayout>