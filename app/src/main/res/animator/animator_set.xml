<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="sequentially"    android:interpolator="@android:anim/linear_interpolator">
<objectAnimator
    android:valueType="floatType"
    android:valueFrom="-500"
    android:valueTo="0"
    android:propertyName="translateX"/>
    <set android:ordering="together">
        <objectAnimator
            android:propertyName="rotation"
            android:valueFrom="0"
            android:valueTo="360"
            android:valueType="intType"/>
        <set android:ordering="sequentially">
        <objectAnimator
            android:propertyName="alpha"
            android:duration="300"
            android:valueFrom="0"
            android:valueTo="1"
            android:valueType="floatType"/>
            <objectAnimator
                android:propertyName="alpha"
                android:duration="300"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"/>
        </set>

    </set>
</set>