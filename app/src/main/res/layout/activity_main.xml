<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/com.joiway.devin.holiday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".controller.activity.MainActivity">
    <include layout="@layout/view_title_bar" android:id="@+id/rl_title"/>
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:id="@+id/tv_content"
        android:layout_below="@id/rl_title"
        android:gravity="center"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/iv_clip"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_oval"
        android:layout_height="wrap_content" />
      <Button
          android:layout_width="wrap_content"
          android:background="@drawable/shape_oval"
          android:layout_centerInParent="true"
          android:id="@+id/btn_enter"
          android:text="hello"
          android:textColor="@android:color/white"
          android:textSize="@dimen/activity_horizontal_margin"
          android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_below="@id/btn_enter"
        android:text="hello"
        android:textSize="35dp"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:background="@drawable/layer_list_drawable"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:layout_above="@id/btn_enter"
        android:id="@+id/btn_status"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/clip_drawable"
        android:layout_height="100dp" />
    <!--<com.joiway.devin.holiday.view.MeasureView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_height="wrap_content" />-->
</RelativeLayout>
