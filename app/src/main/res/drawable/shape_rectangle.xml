<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:thickness="@dimen/activity_horizontal_margin">

    <corners  android:bottomLeftRadius="180dp"
        android:topLeftRadius="180dp"
       />
    <solid android:color="@android:color/transparent" />
    <stroke
        android:width="@dimen/activity_horizontal_margin"
        android:color="@android:color/white"
        android:dashGap="10dp"
        android:dashWidth="40dp" />
    <padding android:bottom="@dimen/activity_padding"
        android:left="60dp"
        android:right="@dimen/activity_padding"
        android:top="@dimen/activity_padding"/>

</shape>